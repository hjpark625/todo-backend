{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "rootDir": "./src",
        "moduleResolution": "node",
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES5", "ES6"],
        "sourceMap": true,
        "types": ["node"],
        "outDir": "./dist",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["*"]
        }
    },
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}