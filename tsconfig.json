{
    "include": ["src/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "rootDir": "./src",
        "moduleResolution": "node",
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES5", "ES6"],
        "sourceMap": true,
        "types": ["node"],
        "outDir": "./dist",
        "strict": true,
        "baseUrl": "./src/main.ts",
        "esModuleInterop": true,
        "experimentalDecorators": true
    }
}